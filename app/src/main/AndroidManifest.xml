<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.nathanmkaya.residency">

  <uses-sdk tools:overrideLibrary="com.firebase.ui, com.firebase.ui.auth"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

  <application
      android:name=".App"
      android:allowBackup="true"
      android:icon="@drawable/bed"
      android:label="@string/app_name"
      android:roundIcon="@drawable/bed"
      android:supportsRtl="true"
      android:theme="@style/AppTheme.NoActionBar">
    <activity android:name=".ui.devices.DevicesActivity">
    </activity>
    <activity android:name=".ui.news.NewsActivity">
    </activity>
    <activity
        android:name=".ui.students.StudentsActivity"
        android:theme="@style/AppTheme.NoActionBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".ui.auth.LoginActivity"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:name=".ui.students.studentdetails.StudentDetailsActivity">
    </activity>
    <activity
        android:name=".ui.students.addstudent.AddStudentActivity"
        android:theme="@style/AppTheme">
    </activity>
  </application>

</manifest>